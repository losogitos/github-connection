<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/repos_list"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/repos_activity_vertical_margin"
        android:paddingLeft="@dimen/repos_activity_horizontal_margin"
        android:paddingRight="@dimen/repos_activity_horizontal_margin"
        android:paddingTop="@dimen/repos_activity_vertical_margin"/>

</android.support.v4.widget.SwipeRefreshLayout>